<div class="text-center">
  <h1>epicoverflow</h1>
  <%if @questions.any? %>
  <% @questions.each do |question|%>
  <%= question.question %> by <%= question.user.name%> <%= time_ago_in_words(@question.created_at) %> ago
  <%end%>
  <%else%>
  <p>
    no questions, ask a question!
  </p>
  <%end%>
<hr>
  <%=render "form"%>
<hr>
  <%= link_to 'sign up', users_path %>
</div>
